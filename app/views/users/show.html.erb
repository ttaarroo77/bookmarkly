<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h2>マイページ</h2>
          <%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-outline-primary" %>
        </div>
        <div class="card-body">
          <h3><%= @user.name %></h3>
          <p><%= @user.email %></p>
        </div>
      </div>
      
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h3>マイプロンプト一覧</h3>
          <%= link_to "新規プロンプト作成", new_prompt_path, class: "btn btn-primary" %>
        </div>
        <div class="card-body">
          <% if @prompts.present? %>
            <div class="row">
              <%= render partial: "prompts/prompt", collection: @prompts %>
            </div>
          <% else %>
            <p class="text-center py-4">プロンプトがまだありません。新しいプロンプトを追加しましょう！</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>