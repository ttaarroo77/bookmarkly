<div class="tag-suggestions">
  <h3>タグ候補</h3>
  <% if @prompt.tag_suggestions.empty? %>
    <p>タグ候補を生成中です...</p>
  <% else %>
    <div class="suggestions-list">
      <% @prompt.tag_suggestions.order(confidence: :desc).each do |suggestion| %>
        <div class="suggestion-item <%= suggestion.applied? ? 'applied' : '' %>">
          <span class="tag-name"><%= suggestion.name %></span>
          <span class="confidence">(<%= number_to_percentage(suggestion.confidence * 100, precision: 0) %>)</span>
          <% unless suggestion.applied? %>
            <%= button_to '適用',
                         apply_tag_suggestion_prompt_path(@prompt, suggestion_id: suggestion.id),
                         class: 'apply-button',
                         method: :post %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>