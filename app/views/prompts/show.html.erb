<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0"><%= @prompt.title %></h1>
            <%= link_to prompts_path, class: "btn btn-outline-secondary" do %>
              <span>← 一覧に戻る</span>
            <% end %>
          </div>
          
          <div class="mb-4">
            <h2 class="h5 mb-2">URL</h2>
            <div class="d-flex align-items-center">
              <a href="<%= @prompt.url %>" class="url-link" target="_blank" title="<%= @prompt.url %>">
                <%= truncate(@prompt.url, length: 50) %>
                <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" fill="currentColor" class="bi bi-box-arrow-up-right" viewBox="0 0 16 16">
                  <path fill-rule="evenodd" d="M8.636 3.5a.5.5 0 0 0-.5-.5H1.5A1.5 1.5 0 0 0 0 4.5v10A1.5 1.5 0 0 0 1.5 16h10a1.5 1.5 0 0 0 1.5-1.5V7.864a.5.5 0 0 0-1 0V14.5a.5.5 0 0 1-.5.5h-10a.5.5 0 0 1-.5-.5v-10a.5.5 0 0 1 .5-.5h6.636a.5.5 0 0 0 .5-.5z"/>
                  <path fill-rule="evenodd" d="M16 .5a.5.5 0 0 0-.5-.5h-5a.5.5 0 0 0 0 1h3.793L6.146 9.146a.5.5 0 1 0 .708.708L15 1.707V5.5a.5.5 0 0 0 1 0v-5z"/>
                </svg>
              </a>
            </div>
          </div>
          
          <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h5 class="mb-0">説明</h5>
              <% if @prompt.ai_processing_status == 'pending' %>
                <%= link_to 'AI説明文を生成', generate_description_prompt_path(@prompt), method: :post, class: 'btn btn-sm btn-outline-primary' %>
              <% end %>
            </div>
            <div class="card-body">
              <% if @prompt.ai_processing_status == 'processing' %>
                <div class="text-center py-4">
                  <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                  </div>
                  <p class="mt-2 text-muted">AI説明文を生成中...</p>
                </div>
              <% else %>
                <p class="card-text"><%= @prompt.content.presence || '説明はありません' %></p>
              <% end %>
            </div>
          </div>
          
          <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h5 class="mb-0">タグ</h5>
              <% if @prompt.ai_processing_status == 'pending' %>
                <%= link_to 'AIタグを提案', generate_tag_suggestions_prompt_path(@prompt), method: :post, class: 'btn btn-sm btn-outline-primary' %>
              <% end %>
            </div>
            <div class="card-body">
              <% if @prompt.tags.present? %>
                <div class="d-flex flex-wrap gap-2">
                  <% @prompt.tags.each do |tag| %>
                    <%= link_to tag.name, tag_path(tag), class: 'badge bg-secondary text-decoration-none' %>
                  <% end %>
                </div>
              <% else %>
                <p class="text-muted">タグはありません</p>
              <% end %>
              
              <% if @prompt.ai_processing_status == 'processing' && @prompt.tag_suggestions.empty? %>
                <div class="mt-3">
                  <small class="text-muted">
                    <i class="fas fa-spinner fa-spin me-1"></i> AIがタグを分析中...
                  </small>
                </div>
              <% elsif @prompt.tag_suggestions.present? %>
                <div class="mt-3">
                  <small class="text-muted">推奨タグ:</small>
                  <div class="d-flex flex-wrap gap-1 mt-1">
                    <% @prompt.tag_suggestions.order(count: :desc).limit(10).each do |suggestion| %>
                      <span class="badge bg-light text-dark border"><%= suggestion.name %></span>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          
          <%= render 'tag_suggestions', prompt: @prompt %>
          
          <div class="mb-4">
            <h2 class="h5 mb-2">登録日時</h2>
            <p class="mb-0"><%= l @prompt.created_at, format: :long %></p>
          </div>
          
          <div class="d-flex mt-4">
            <%= link_to edit_prompt_path(@prompt), class: "btn btn-dark me-2" do %>
              <span>編集</span>
            <% end %>
            
            <button type="button" class="btn btn-outline-danger" id="delete-prompt-btn" data-prompt-id="<%= @prompt.id %>">
              削除
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // 削除ボタン機能
    const deleteButton = document.getElementById('delete-prompt-btn');
    if (deleteButton) {
      deleteButton.addEventListener('click', function() {
        const promptId = this.getAttribute('data-prompt-id');
        const csrfToken = document.querySelector('meta[name="csrf-token"]').getAttribute('content');
        
        // 削除リクエストを送信
        fetch(`/prompts/${promptId}`, {
          method: 'DELETE',
          headers: {
            'X-CSRF-Token': csrfToken,
            'Content-Type': 'application/json',
            'Accept': 'application/json'
          }
        })
        .then(response => {
          // 成功したら一覧ページへリダイレクト
          window.location.href = '/prompts';
        })
        .catch(error => {
          console.error('Error:', error);
          // エラーが発生しても一覧ページへリダイレクト
          window.location.href = '/prompts';
        });
      });
    }
  });
</script>