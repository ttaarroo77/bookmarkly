<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-body">
          <h1 class="h3 mb-4">プロンプト詳細</h1>
          
          <%= form_with model: @prompt, url: prompt_path(@prompt), method: :patch, id: "prompt-form" do |f| %>
            <div class="mb-3">
              <%= f.label :url, "URL", class: "form-label" %>
              <%= f.text_field :url, class: "form-control" %>
            </div>
            
            <div class="mb-3">
              <%= f.label :title, "タイトル", class: "form-label" %>
              <%= f.text_field :title, class: "form-control" %>
            </div>
            
            <div class="mb-3">
              <%= f.label :description, "説明", class: "form-label" %>
              <%= f.text_area :description, class: "form-control", rows: 3 %>
            </div>
            
            <div class="mb-3">
              <%= f.label :tags_text, "タグ（カンマ区切り）", class: "form-label" %>
              <%= f.text_field :tags_text, value: @prompt.tags.map(&:name).join(', '), class: "form-control", id: "prompt_tags_text" %>
            </div>
            
            <% if @suggested_tags.present? %>
              <div class="mb-3">
                <label class="form-label d-flex justify-content-between">
                  AIタグ提案
                  <a href="#" id="apply-ai-tags" class="text-dark small" style="text-decoration: underline; opacity: 0.8;">不足タグを追加</a>
                </label>
                <div class="border rounded p-2 bg-light">
                  <%= @suggested_tags %>
                </div>
                <small class="text-muted">「不足タグを追加」をクリックすると、既存のタグに加えて新しいタグが追加されます</small>
              </div>
            <% end %>
            
            <div class="mt-4 d-flex justify-content-between">
              <%= link_to "← 一覧へ戻る", prompts_path, class: "btn btn-outline-secondary" %>
              <div>
                <%= link_to "削除", prompt_path(@prompt), method: :delete, 
                    data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, 
                    class: "btn btn-outline-danger me-2" %>
                <%= f.submit "保存", class: "btn", style: "background-color: #212529; color: white;" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // AIタグ提案を適用するリンクの処理
    const applyAiTagsLink = document.getElementById('apply-ai-tags');
    if (applyAiTagsLink) {
      applyAiTagsLink.addEventListener('click', function(e) {
        e.preventDefault();
        
        // 現在のタグと提案タグを取得
        const aiTagsString = "<%= @suggested_tags %>";
        const tagsField = document.getElementById('prompt_tags_text');
        
        if (aiTagsString && tagsField) {
          // 現在のタグを配列に変換
          const currentTagsString = tagsField.value;
          const currentTags = currentTagsString.split(',')
            .map(tag => tag.trim())
            .filter(tag => tag.length > 0);
          
          // 提案タグを配列に変換
          const aiTags = aiTagsString.split(',')
            .map(tag => tag.trim())
            .filter(tag => tag.length > 0);
          
          // 現在のタグに含まれていない提案タグを抽出
          const newTags = aiTags.filter(tag => !currentTags.includes(tag));
          
          // 新しいタグを追加
          if (newTags.length > 0) {
            const updatedTags = [...currentTags, ...newTags];
            tagsField.value = updatedTags.join(', ');
            
            // 追加成功を視覚的に示す（オプション）
            tagsField.classList.add('border-success');
            setTimeout(() => {
              tagsField.classList.remove('border-success');
            }, 1000);
          }
        }
      });
    }
  });
</script>