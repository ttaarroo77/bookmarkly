<div class="container py-4">
  <div class="row">
    <div class="col-12 mb-4">
      <h1 class="h3">プロンプト管理</h1>
    </div>
  </div>

  <div class="row">
    <!-- 左側：プロンプト一覧 -->
    <div class="col-lg-7 mb-4">
      <%= render 'list', prompts: @prompts %>
    </div>

    <!-- 右側：新規追加フォーム -->
    <div class="col-lg-5">
      <div class="card">
        <div class="card-body">
          <h2 class="h4 mb-3">新規プロンプト</h2>
          <%= render 'form', prompt: @prompt %>
        </div>
      </div>
      
      <div class="card mt-4">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="h5 mb-0">タグ一覧</h3>
            <%= form_with(url: prompts_path, method: :get, class: "d-flex") do |f| %>
              <%= f.select :sort, 
                [
                  ['登録数が多い順', 'count_desc'],
                  ['登録数が少ない順', 'count_asc']
                ],
                { selected: params[:sort], include_blank: '並び替え' },
                { class: 'form-select form-select-sm w-auto', onchange: 'this.form.submit()' }
              %>
            <% end %>
          </div>
          
          <div class="tag-list">
            <% if @tags.present? %>
              <% @tags.each do |tag| %>
                <%= link_to prompts_path(tag: tag.name), class: "badge bg-light text-dark text-decoration-none me-2 mb-2" do %>
                  <%= tag.name %>
                  <span class="ms-1 text-secondary">(<%= @tag_counts[tag.name] %>)</span>
                <% end %>
              <% end %>
            <% else %>
              <p class="text-muted mb-0">タグがありません</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>