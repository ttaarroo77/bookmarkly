<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h2 class="h4 mb-0">プロンプトの編集</h2>
          <div class="btn-group">
            <%= button_to "削除", 
                prompt_path(@prompt), 
                method: :delete, 
                data: { confirm: "本当に削除しますか？" },
                class: "btn btn-sm btn-outline-danger" %>
            <%= link_to "戻る", prompts_path, class: "btn btn-sm", style: "background-color: #212529; color: white; margin-left: 0.5rem;" %>
          </div>
        </div>
        <div class="card-body">
          <%= render 'form', prompt: @prompt %>
        </div>
      </div>
    </div>
  </div>
</div>