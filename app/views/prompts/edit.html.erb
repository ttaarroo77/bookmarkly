<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card">
        <div class="card-body">
          <h1 class="h3 mb-4">プロンプトを編集</h1>
          
          <%= form_with(model: @prompt, local: true) do |f| %>
            <% if @prompt.errors.any? %>
              <div class="alert alert-danger">
                <ul class="mb-0">
                  <% @prompt.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            
            <div class="mb-3">
              <%= f.label :url, "URL", class: "form-label" %>
              <%= f.url_field :url, class: "form-control" %>
            </div>
            
            <div class="mb-3">
              <%= f.label :title, "タイトル", class: "form-label" %>
              <%= f.text_field :title, class: "form-control" %>
            </div>
            
            <div class="mb-3">
              <%= f.label :description, "説明", class: "form-label" %>
              <%= f.text_area :description, class: "form-control", rows: 3 %>
            </div>
            
            <div class="mb-4">
              <%= f.label :tags_text, "タグ（カンマ区切り）", class: "form-label" %>
              <%= f.text_field :tags_text, class: "form-control", value: @prompt.tags_text %>
            </div>
            
            <div class="d-flex justify-content-between">
              <%= f.submit "更新", class: "btn btn-dark" %>
              <%= link_to "キャンセル", prompts_path, class: "btn btn-outline-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>