<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-header">
          <h1 class="h5 mb-0">新規ブックマーク</h1>
        </div>
        <div class="card-body">
          <% if @prompt.errors.any? %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% messages = @prompt.errors.full_messages.map { |message| 
                  if message.match?(/^Url は.*登録されています/)
                    "URLはすでに登録されています"
                  else
                    message
                  end
                }.uniq %>
                <% messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= render 'form', prompt: @prompt %>
        </div>
      </div>
    </div>
  </div>
</div>
