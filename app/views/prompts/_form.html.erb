<%# app/views/prompts/_form.html.erb - プロンプト作成・編集フォーム %>



<div id="prompt_form">
  <%= form_with(model: prompt, local: true) do |form| %>
    <% if prompt.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(prompt.errors.count, "error") %> prohibited this prompt from being saved:</h4>
        <ul>
          <% prompt.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :url, "URL", class: "form-label" %>
      <%= form.text_field :url, class: "form-control" %>
    </div>
    
    <div class="mb-3">
      <%= form.label :title, "タイトル", class: "form-label" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>
    
    <div class="mb-3">
      <%= form.label :content, "説明", class: "form-label" %>
      <%= form.text_area :content, rows: 5, class: "form-control" %>
      <% if prompt.ai_processing_status == 'processing' %>
        <div class="mt-2">
          <small class="text-muted">
            <i class="fas fa-spinner fa-spin me-1"></i> AI説明文を生成中...
          </small>
        </div>
      <% end %>
    </div>
    
    <div class="mb-3">
      <%= form.label :tags_text, "タグ（カンマ区切り）", class: "form-label" %>
      <%= form.text_field :tags_text, value: prompt.tags.map(&:name).join(', '), class: "form-control", id: "prompt_tags_text" %>
      
      <%# タグ提案コンポーネントを表示 %>
      <%= render 'tag_suggestions' %>
    </div>
    
    <div class="d-flex justify-content-between mt-4">
      <%= link_to '戻る', prompts_path, class: "btn btn-outline-secondary" %>
      <%= form.submit '保存', class: "btn btn-primary" %>
    </div>
  <% end %>
</div> 